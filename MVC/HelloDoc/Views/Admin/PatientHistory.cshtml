@model Services.ViewModels.Admin.PatientHistory

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Patient History";
    ViewBag.JsFile = "/js/Admin/record.js";
    ViewBag.CssFile = "/css/Admin/records.css";
    ViewBag.Header = "_AdminDashboardHeader";
}


<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
        <h3>
            Patient History
        </h3>
        <a asp-controller="Admin" asp-action="Dashboard">
            <button class="bg-white px-3 fw-bold">
                <i class="bi bi-chevron-left"> </i>
                Back
            </button>
        </a>
    </div>
    <div class="recordList">
        <form id="patientHistoryForm">
            <div class="row">
                <div class="form-floating col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <input asp-for="FirstName" class="form-control" id="firstname" placeholder="Name" />
                    <label for="firstname">First Name</label>
                </div>
                <div class="form-floating col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <input asp-for="LastName" class="form-control" id="lastName" placeholder="LastName" />
                    <label for="lastName">Last Name</label>
                </div>
                <div class="form-floating col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <input asp-for="Email" class="form-control" id="email" placeholder="Email" />
                    <label for="email">Email</label>
                </div>
                <div class="form-floating col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <input asp-for="Phone" class="form-control" id="phone" placeholder="Number" />
                    <label for="phone">Phone Number</label>
                </div>
            </div>
            <div class="d-flex justify-content-end align-items-center mt-2 mb-2">
                <button class="bg-white px-3 me-3 fw-bold resetPatientHistory" type="button">
                    Clear
                </button>
                <button class="px-3 cloredButton text-white fw-bold searchButtonPatientHistory" type="button">
                    Search
                </button>
            </div>
        </form>
        <div class="tableData">
            <partial name="_PatientHistoryTable" model="@Model.PatientHistoryTable"></partial>
        </div>
    </div>
</div>
