@model Services.ViewModels.Admin.Provider

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Provider";
    ViewBag.JsFile = "/js/Admin/provider.js";
    ViewBag.CssFile = "/css/Admin/providers.css";
    ViewBag.Header = "_AdminDashboardHeader";
}


<partial name="_ContactProvider" model="@Model.ContactProvider">
    <div class="container">
        <h3 class="mt-3 mb-3">
            Provider Information
        </h3>
        <div class="providerList">
            <div class="d-flex justify-content-between align-items-center mt-2 mb-3 topElements">
                <select class="form-select select shadow-none" id="regionFilter">
                    <option selected value="0">All</option>
                    @foreach (var item in Model.Regions)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
                <a asp-controller="Admin" asp-action="CreateProvider" id="createProviderButton">
                    <button class="bg-white px-3 fw-bold py-2 w-100">
                        Create Provider Account
                    </button>
                </a>
            </div>
            <div class="tableData">
                <partial name="_ProviderTable" model="@Model.Providers">
            </div>
        </div>
    </div>
