@model Services.ViewModels.Admin.BusinessProfile

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create Partners";
    ViewBag.JsFile = "/js/Admin/pratners.js";
    ViewBag.CssFile = "/css/Admin/partners.css";
    ViewBag.Header = "_AdminDashboardHeader";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-2 mb-3">
        @if (Model.IsUpdate)
        {
            <h3>Update Business</h3>
        }
        else
        {
            <h3> Add Business</h3>
        }
        <a asp-controller="Admin" asp-action="Partners">
            <button class="bg-white px-3 fw-bold" onclick="setTab(5)">
                <i class="bi bi-chevron-left"> </i>
                Back
            </button>
        </a>
    </div>
    <form class="partnersList" asp-controller="Admin" asp-action="@Model.AspAction">
        <h5 class="fw-bold">
            Details
        </h5>
        <div class="row">
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <input asp-for="VendorName" class="form-control" id="Name" placeholder="Name" />
                <label for="Name">Business Name</label>
                <span asp-validation-for="VendorName" class="text-danger"></span>
            </div>
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <select asp-for="Profession" class="form-select" id="type">
                    <option value="">Select Profession</option>
                    @foreach (var item in Model.ProfessionList)
                    {
                        <option value=@item.Key>@item.Value</option>
                    }
                </select>
                <label for="type">Account Type</label>
                <span asp-validation-for="Profession" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <input asp-for="FaxNumber" class="form-control" id="faxNumber" placeholder="FaxNumber" />
                <label for="faxNumber">Fax Number</label>
                <span asp-validation-for="FaxNumber" class="text-danger"></span>
            </div>
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <input asp-for="PhoneNumber" class="form-control" id="phone" placeholder="MobileNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <input asp-for="Email" class="form-control" id="email" placeholder="Email" />
                <label for="email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <input asp-for="BusinessContact" class="form-control" id="contact" placeholder="Contact" />
                <label for="contact">Business Contact</label>
                <span asp-validation-for="BusinessContact" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <input asp-for="Street" class="form-control" id="street" placeholder="Street" />
                <label for="street">Street</label>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <input asp-for="City" class="form-control" id="city" placeholder="City" />
                <label for="city">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <select asp-for="State" class="form-select" id="state">
                    <option value="">Select State</option>
                    @foreach (var item in Model.RegionList)
                    {
                        <option value=@item.Key>@item.Value</option>
                    }
                </select>
                <label for="state">State</label>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                <input asp-for="Zip" class="form-control" id="zip" placeholder="Zip" />
                <label for="zip">Zip</label>
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-3 mb-2">
            @if (Model.IsUpdate)
            {
                <button class="px-3 me-2 text-white fw-bold bottomButtons">
                    Update
                </button>
            }
            else
            {
                <button class="px-3 me-2 text-white fw-bold bottomButtons">
                    Submit
                </button>
            }
            <button class="px-3 bg-white cancleButton fw-bold" type="reset">
                Cancel
            </button>
        </div>
    </form>
</div>
<script>
    const phoneInputField = document.getElementById("phone");
    const phoneInput = window.intlTelInput(phoneInputField, {
        initialCountry: "in",
        separateDialCode: true,
        utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });
</script>
