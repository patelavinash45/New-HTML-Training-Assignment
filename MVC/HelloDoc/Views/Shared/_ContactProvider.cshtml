@model Services.ViewModels.Admin.ContactProvider

<link href="~/css/admin/_requestPopUp.css" rel="stylesheet" />
<script src="~/js/Admin/requestPopUp.js"></script>
<div class="modal" tabindex="-1" id="contactProvider">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Contact Your Provider</h5>
                <button type="button" class="border-0 bg-transparent" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle-fill h3 modal-title"></i>
                </button>
            </div>
            <form asp-controller="Admin" asp-action="ContactProvider" id="contactForm">
                <div class="modal-body">
                    <div class="mb-2">
                        Choose Communication to send message
                    </div>
                    <input asp-for="providerId" readonly class="d-none patientRequestId"  type="text" />
                    <div class="form-check form-check-inline">
                        <input asp-for="email" class="form-check-input" type="checkbox" value="true" id="email">
                        <label class="form-check-label" for="r-1">
                            Email
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="sms" class="form-check-input" type="checkbox" value="true" id="sms">
                        <label class="form-check-label" for="r-1">
                            Mobile
                        </label> 
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" value="" id="both">
                        <label class="form-check-label" for="r-1">
                            Both
                        </label>
                    </div>
                    <span class="text-danger validation" id="medium">This Communication-Medium Field is Required</span>
                    <div class="form-floating">
                        <textarea asp-for="Message" class="form-control h-100 border-2 mt-3" placeholder="AdditionalNotes" id="message" rows="5"></textarea>
                        <label for="message">Message</label>
                        <span class="text-danger validation" id="messageValidation">This Message Field is Required</span>
                    </div>
                    <div class="d-flex justify-content-end mt-2">
                        <button type="submit" class="btn mx-2" id="conformButton">
                            Send
                        </button>
                        <button type="button" class="btn" data-bs-dismiss="modal" id="closeButton">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
