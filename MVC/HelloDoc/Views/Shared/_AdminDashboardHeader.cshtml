    <a asp-controller="Admin" asp-action="Partners" class="d-flex justify-content-center border m-2 rounded-start">
        <div class="mt-1 h6">
            Partners
        </div>
    </a>
    <div class="mt-1 h6 d-flex justify-content-center border m-2 rounded-start">
        <button class="h6 bg-transparent border-0 h-auto" data-bs-toggle="dropdown" aria-expanded="false">
            Access
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" asp-controller="Admin" asp-action="Access">
                    Access
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Admin" asp-action="CreateAdmin">
                    Create Admin
                </a>
            </li>
         </ul>
    </div>
    <div class="mt-1 h6 d-flex justify-content-center border m-2 rounded-start mb-4">
        <button class="h6 bg-transparent border-0 h-auto" data-bs-toggle="dropdown" aria-expanded="false">
            Providers
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" asp-controller="Admin" asp-action="Records">
                    Records
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Admin" asp-action="EmailLogs">
                    EmailLogs
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Admin" asp-action="SmsLogs">
                    SMS Logs
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Admin" asp-action="PatientHistory">
                    Patient History
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Admin" asp-action="BlockHistory">
                    Block History
                </a>
            </li>
        </ul>
    </div>
</div>

