@model Services.ViewModels.Admin.AssignAndTransferPopUp

<link href="~/css/admin/_requestPopUp.css" rel="stylesheet" />
<script src="~/js/Admin/requestPopUp.js"></script>
<div class="modal" tabindex="-1" id="transferRequest">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Transfer Request</h5>
                <button type="button" class="border-0 bg-transparent" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle-fill h3 modal-title"></i>
                </button>
            </div>
            <form asp-controller="Admin" asp-action="TransferPopUp">
                <div class="modal-body">
                    To transfer this request search and select another Physician.
                    <input readonly class="d-none patientRequestId" asp-for="RequestId" type="text" />
                    <select class="p-2 w-100 mt-2 selectRegion" asp-for="SelectedRegion" onchange="changeSelect(this)">
                        <option disabled selected value="">Regions</option>
                        @foreach (var item in Model.Regions)
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    </select>
                    <span asp-validation-for="SelectedRegion" class="text-danger"></span>
                    <select class="p-2 w-100 mt-2 physician" asp-for="SelectedPhysician">
                        <option disabled selected value="">Physicians</option>
                    </select>
                    <span asp-validation-for="SelectedPhysician" class="text-danger"></span>
                    <div class="form-floating">
                        <textarea asp-for="AdminTransferNotes" class="form-control h-100 border-2 mb-3 mt-2" placeholder="AdditionalNotes"
                                  id="assignReuqestNotes" rows="5">  </textarea>
                        <label for="assignReuqestNotes">Additional Notes</label>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn mx-2" id="conformButton">
                            Conform
                        </button>
                        <button type="reset" class="btn" data-bs-dismiss="modal" id="closeButton">
                            Close
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
