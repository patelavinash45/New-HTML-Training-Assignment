@model List<Services.ViewModels.Admin.PartnersTableData>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th class="bg-transparent">
                    Profession
                </th>
                <th class="bg-transparent">
                    Business Name
                </th>
                <th class="bg-transparent">
                    Email
                </th>
                <th class="bg-transparent">
                    Fax Number
                </th>
                <th class="bg-transparent">
                    Phone Number
                </th>
                <th class="bg-transparent">
                    Business Contact
                </th>
                <th class="bg-transparent">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr class="align-middle">
                    <td>
                        @item.Profession
                    </td>
                    <td>
                        @item.BusinessName
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.FaxNumber
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>
                    <td>
                        @item.BusinessContact
                    </td>
                    <td>
                        <a asp-controller="Admin" asp-action="UpdateBusiness" asp-route-venderId="@item.VenderId">
                            <button class="bg-white px-3 fw-bold">
                                Edit
                            </button>
                        </a>
                        <a asp-controller="Admin" asp-action="DeleteBusiness" asp-route-venderId="@item.VenderId">
                            <button class="bg-white px-3 fw-bold">
                                Delete
                            </button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@foreach(var item in Model)
{
    <div class="accordion accordion-flush w-100" id="accordionFlushExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button class="accordion-button collapsed h-100" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-@item.VenderId" aria-controls="panelsStayOpen-collapseOne">
                    @item.BusinessName
                </button>
                <hr class="h1">
            </h2>
            <div id="panelsStayOpen-@item.VenderId" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingOne">
                <div class="accordion-body row">
                    <div class="mt-3">
                        <div>
                            <i class="bi bi-person-fill rounded-circle border border-1 border-primary p-2"></i>
                            <span class="h6">
                                Profession : @item.Profession
                            </span>
                        </div>
                        <div class="mt-4">
                            <i class="bi bi-envelope rounded-circle border border-1 border-primary p-2"></i>
                            <span class="h6">
                                Email : @item.Email
                            </span>
                        </div>
                        <div class="mt-4">
                            <i class="bi bi-voicemail rounded-circle border border-1 border-primary p-2"></i>
                            <span class="h6">
                                Fax : @item.FaxNumber
                            </span>
                        </div>
                        <div class="mt-4">
                            <i class="bi bi-telephone rounded-circle border border-1 border-primary p-2"></i>
                            <span class="h6">
                                Mobile : @item.PhoneNumber
                            </span>
                        </div>
                        <div class="mt-4">
                            <i class="bi bi-person-rolodex rounded-circle border border-1 border-primary p-2"></i>
                            <span class="h6">
                                Business Contact : @item.BusinessContact
                            </span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end align-items-center mb-2">
                        <a asp-controller="Admin" asp-action="UpdateBusiness" asp-route-venderId="@item.VenderId">
                            <button class="bg-white px-3">
                                Edit
                            </button>
                        </a>
                        <a asp-controller="Admin" asp-action="DeleteBusiness" asp-route-venderId="@item.VenderId">
                            <button class="bg-white px-3">
                                Delete
                            </button>
                        </a>
                    </div>
                    <hr class="h1">
                </div>
            </div>
        </div>
    </div>
}