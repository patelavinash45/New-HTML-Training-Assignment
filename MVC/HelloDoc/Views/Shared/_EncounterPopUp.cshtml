<link href="~/css/admin/_requestPopUp.css" rel="stylesheet" />
<script src="~/js/Admin/requestPopUp.js"></script>
<div class="modal" tabindex="-1" id="encounterPopUp">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Select Type of Care</h5>
                <button type="button" class="border-0 bg-transparent" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle-fill h3 modal-title"></i>
                </button>
            </div>
            <div class="modal-body">
                <input readonly class="d-none patientRequestId" type="text" id="requestId"/>
                <div class="d-flex justify-content-center mt-2">
                    <button class="activeButton careButton me-3" id="videoCall" onclick="careButtonChnage(true)">Consult Care</button>
                    <button class="careButton" id="houseVisit" onclick="careButtonChnage(false)">House Visit</button>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn mx-2" id="conformButton" onclick="encounter()">
                        Conform
                    </button>
                    <button type="reset" class="btn" data-bs-dismiss="modal" id="closeButton">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>