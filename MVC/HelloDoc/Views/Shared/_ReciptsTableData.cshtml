@model Services.ViewModels.Physician.Receipts

@{
    DateTime date = Model.StartDate;
    int totaldays = date.Day < 15 ? 14 : DateTime.DaysInMonth(date.Year, date.Month);
}

<div class="table-responsive mt-3">
    <table class="table">
        <thead>
            <tr>
                <th class="bg-transparent col-2">
                    Date
                </th>
                <th class="bg-transparent col-2">
                    Item
                </th>
                <th class="bg-transparent col-2">
                    Amount
                </th>
                <th class="bg-transparent col-3">
                    Bill
                </th>
                <th class="bg-transparent col-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = date.Day; i <= totaldays; i++)
            {
                <tr class="align-middle bg-white reciptsTable" id="@date.Day">
                    <td>
                        @date.ToString("MM/dd/yyyy")
                    </td>
                    <td>
                        <input name="Receipts.Items" class="w-75 item" id="@date.Day" />
                    </td>
                    <td>
                        <input name="Receipts.Amounts" class="w-75 amount" type="number" min="0" id="@date.Day" value="0"/>
                    </td>
                    <td>
                        <input name="Receipts.Bill" class="w-75 fileInput" type="file" id="@date.Day" />
                        <div class="fileName"></div>
                    </td>
                    <td>
                        <div class="d-flex buttons d-none">
                            <button class="editButton me-2 bg-white" id="@date.Day" type="button">
                                Edit
                            </button>
                            <button class="deleteButton me-2 bg-white" id="@date.Day" type="button">
                                Delete
                            </button>
                            <button class="viewButton me-2 bg-white" id="@date.Day" type="button">
                                View
                            </button>
                        </div> 
                        <div class="validation d-none">
                            Please, Enter Proper Details 
                        </div>
                    </td>
                </tr>
                date = date.AddDays(1);
            }
        </tbody>
    </table>
</div>