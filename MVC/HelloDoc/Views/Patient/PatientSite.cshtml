@{
    Layout = "_PatientLayout";
    ViewData["Title"] = "Patient Site";
    ViewBag.CssFile = "/css/patient/PatientSite.css";
}

<div class="d-flex flex-column vh-100 justify-content-between align-items-center">
    <div id="them-icon">
        <i class="bi-moon"> </i>
    </div>
    <div class="d-flex flex-column align-items-center">
        <img id="bg-image" src="~/images/LoginImage-removeBG.png" />
        <img class="mt-3" id="logo-image" src="~/images/helloDocLogo.png" />
        <a asp-controller="Patient" asp-action="SubmitRequest">
            <button class="button" id="submit-button">Submit A Request</button>
        </a>
        <a asp-controller="Patient" asp-action="LoginPage">
            <button class="button" id="register-button">
                Registered Patient
            </button>
        </a>
        <a asp-controller="Admin" asp-action="LoginPage">
            <button class="button" id="admin-button">
                Admin/Physician
            </button>
        </a>
    </div>
    <div id="bottom-box">
        <a class="mx-2 conditions-text"> Terms of Conditions </a>
        |
        <a class="mx-2 conditions-text"> Privacy Policy </a>
    </div>
</div>
<script>
    $(document).ready(function(){
        localStorage.removeItem("tab");
        localStorage.removeItem("status");
    })
</script>