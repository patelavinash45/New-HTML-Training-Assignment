@model Services.ViewModels.Physician.PhysicianScheduling

@{
    Layout = "_PhysicianLayout";
    ViewData["Title"] = "Scheduling";
    ViewBag.JsFile = "/js/Physician/scheduling.js";
    ViewBag.CssFile = "/css/Admin/providerScheduling.css";
    ViewBag.Header = "_PhysicianDashboardHeader";
}

<partial name="_CreateShift" model="Model.CreateShift">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-2 mb-3">
            <h3>
                Scheduling
            </h3>
            <a asp-controller="Physician" asp-action="Dashboard">
                <button class="bg-white px-3 fw-bold py-2" onclick="setTab(1)">
                    <i class="bi bi-chevron-left"> </i>
                    Back
                </button>
            </a>
        </div>
        <div class="h5">
            <span id="display">

            </span>
        </div>
        <div class="d-flex justify-content-end align-items-center mt-2 mb-3">
            <div>
                <i class="bi bi-circle-fill mx-1 text-pink"></i>
                Pending Shift
            </div>
            <div>
                <i class="bi bi-circle-fill text-green mx-1"></i>
                Approved Shift
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-2 mb-3 topElements">
            <div>
                <button class="border-0 bg-transparent" id="previous">
                    <i class="bi bi-caret-left-square fs-2"></i>
                </button>
                <i class="bi bi-calendar3 fs-4 mx-2"></i>
                <button class="border-0 bg-transparent" id="next">
                    <i class="bi bi-caret-right-square fs-2"></i>
                </button>
            </div>
            <div class="topButtons">
                <button class="coloredButtons fw-bold py-2 px-2 topButtons bg-white" data-bs-target="#createShift" data-bs-toggle="modal">
                    Add New Shift
                </button>
            </div>
        </div>
        <div class="tab">
            <partial name="_MonthWiseScheduling" model="@Model.TableData">
        </div>
    </div>
